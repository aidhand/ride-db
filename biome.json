{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },

  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": true,
    "attributePosition": "multiline"
  },

  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "quoteProperties": "preserve",
      "semicolons": "always",
      "quoteStyle": "double",
      "trailingCommas": "all"
    }
  },

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
