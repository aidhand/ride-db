{
  "name": "ride-db",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "format:bi": "biome format . --write",
    "format:pre": "prettier . --write",
    "format": "bun format:bi && bun format:pre",
    "lint:ox": "oxlint .",
    "lint:ox:fix": "oxlint . --fix",
    "lint:bi": "biome lint .",
    "lint:bi:fix": "biome lint . --write",
    "lint:es": "eslint .",
    "lint:es:fix": "eslint . --fix",
    "lint": "bun lint:ox && bun lint:bi && bun lint:es",
    "lint:fix": "bun lint:ox:fix && bun lint:bi:fix && bun lint:es:fix",
    "typecheck": "bun prepare && tsc --noEmit",
    "test:unit": "vitest --run",
    "test:e2e": "playwright test",
    "test": "bun test:unit && bun test:e2e",
    "preview": "nuxt preview",
    "prepare": "nuxt prepare",
    "start": "bun run ./.output/server/index.mjs"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "@nuxt/fonts": "^0.11.1",
    "@nuxt/image": "^1.10.0",
    "@nuxt/ui": "^3.0.2",
    "@pinia/colada": "^0.15.0",
    "@pinia/colada-nuxt": "^0.1.2",
    "@pinia/nuxt": "^0.11.0",
    "@tailwindcss/vite": "^4.1.4",
    "@vueuse/core": "^13.1.0",
    "drizzle-orm": "^0.41.0",
    "h3-zod": "^0.5.3",
    "nuxt": "^3.16.2",
    "nuxt-auth-utils": "^0.5.20",
    "pinia": "^3.0.2",
    "tailwindcss": "^4.1.4",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@nuxt/eslint": "^1.3.0",
    "@nuxt/test-utils": "^3.17.2",
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.14.1",
    "@vue/test-utils": "^2.4.6",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.25.0",
    "happy-dom": "^17.4.4",
    "oxlint": "^0.16.6",
    "playwright-core": "^1.52.0",
    "prettier": "^3.5.3",
    "std-env": "^3.9.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
